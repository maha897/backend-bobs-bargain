spring:
  application:
    name: Bob's Bargain
  jpa:
    show-sql: true
    hibernate:
      ddl-auto: update
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
  datasource:
    url: jdbc:postgresql://<DB_URL>:<PORT>/<DB_NAME>
    username: <USERNAME>
    password: <PASSWORD>
    hikari:
      maximum-pool-size: 3

jwt:
  secret: <SECRET>
  expiration: 3600000 # ms

server:
  port: 4000
  error:
    include-message: always
    include-binding-errors: always
    include-stacktrace: always
